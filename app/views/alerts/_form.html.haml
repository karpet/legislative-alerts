= panel title: 'Alert', context: :primary do
  = simple_form_for(@alert, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean } ) do |f|

    .panel-body
      = f.error_notification

      .form-inputs
        = f.input :name, required: true, autofocus: true
        = f.input :description
        = f.input :query

    .panel-footer
      .buttons
        = f.button :submit, 'Save', class: "btn-primary"
