.container
  .row
    .leg-alert
      %h2
        Alert:&nbsp;
        = link_to @alert.name.try(:html_safe), @alert.public_url

      %dl
        %dt Status
        %dd
          = @alert.status

        %dt Description
        %dd
          = @alert.description.try(:html_safe)

        %dt Query
        %dd
          = link_to @alert.query.try(:html_safe), @alert.public_url

        %dt Last checked
        %dd
          = @alert.last_run_at

        %dt Last sent
        %dd
          = @alert.last_sent_at

        %dt Checksum
        %dd
          = @alert.checksum_short

  .row

    = link_to 'Edit', edit_alert_path(@alert), class: 'btn btn-primary'
    = link_to 'Delete', alert_path(@alert), method: 'delete', class: 'btn btn-danger'
    = link_to 'Send test email', send_alert_path(@alert), class: 'btn btn-default', method: 'post'
