!!! 5
%html.no-js
  = render 'head'

  %body{ :class => "#{ controller.controller_name }" }
    = render 'chromeframe'
    = render 'header'
    = render 'flashes'

    #main
      = yield

    = render 'footer'

    -# Javascript at the bottom for fast page loading
    = render 'javascripts'

    :javascript
      $(function() {
        window.setTimeout(function() {
          $("#flash").fadeTo(500, 0).slideUp(500, function(){
            $(this).remove();
          });
        }, 3000);
      });
